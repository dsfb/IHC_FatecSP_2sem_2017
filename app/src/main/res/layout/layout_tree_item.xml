<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:paddingStart="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">

    <com.github.johnkil.print.PrintView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconText="@string/ic_keyboard_arrow_right"
        app:iconColor="@color/jet"
        app:iconFont="fonts/material-icon-font.ttf"
        app:iconSize="20dp" />

    <com.github.johnkil.print.PrintView
        android:layout_marginStart="5dp"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconText="@string/ic_email"
        app:iconColor="@color/accent"
        app:iconFont="fonts/material-icon-font.ttf"
        app:iconSize="24dp" />

    <TextView
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/jet"
        />

    <TextView
        android:id="@+id/badge_count"
        android:background="@drawable/badge_border"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

